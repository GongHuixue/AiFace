<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    tools:context=".ui.activity.MeetingSignedActivity">

    <ImageView
        android:id="@+id/face_signed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/circle"/>

    <View style="@style/Line" />
    <include android:id="@+id/te_meeting_name"
        android:padding="5dp"
        layout="@layout/text_edittext_ll"/>
    <include android:id="@+id/te_meeting_time"
        android:padding="5dp"
        layout="@layout/text_edittext_ll"/>
    <include android:id="@+id/te_meeting_addr"
        android:padding="5dp"
        layout="@layout/text_edittext_ll"/>

    <View style="@style/Line" />

    <include android:id="@+id/te_participant_name"
        android:padding="5dp"
        layout="@layout/text_edittext_ll"/>
    <include android:id="@+id/te_participant_part"
        android:padding="5dp"
        layout="@layout/text_edittext_ll"/>

    <View style="@style/Line" />

    <TextView
        android:id="@+id/tv_signed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="已签到"/>


</LinearLayout>