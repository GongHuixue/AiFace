<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.activity.MeetingRegActivity">

    <include android:id="@+id/top_bar"
        layout="@layout/top_action_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/te_meeting_name"
            layout="@layout/text_edittext_ll"
            android:padding="5dp" />

        <include
            android:id="@+id/te_meeting_time"
            layout="@layout/date_time_picker_ll"
            android:padding="5dp" />

        <include
            android:id="@+id/te_meeting_addr"
            layout="@layout/text_edittext_ll"
            android:padding="5dp" />

        <View style="@style/Line" />

        <include
            android:id="@+id/te_participant_name"
            layout="@layout/text_edittext_ll"
            android:padding="5dp" />

        <include
            android:id="@+id/te_participant_part"
            layout="@layout/text_edittext_ll"
            android:padding="5dp" />

        <include
            android:id="@+id/upload_face_rl"
            layout="@layout/upload_face_image" />

        <View style="@style/Line" />

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</LinearLayout>