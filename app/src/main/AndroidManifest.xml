<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.com.aiface">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".AiFaceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MeetingRegActivity" />
        <activity android:name=".ui.activity.AttendanceRegActivity" />
        <activity android:name=".ui.activity.HomeRegActivity" />
        <activity android:name=".ui.activity.GateRegActivity" />
        <activity android:name=".ui.activity.MeetingSignedActivity" />
        <activity android:name=".ui.activity.AttendanceQueryActivity" />
        <activity android:name=".ui.activity.HomeVistorActivity" />
        <activity android:name=".ui.activity.GateAccessActivity" />
        <activity android:name=".ui.activity.FaceDetectActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>